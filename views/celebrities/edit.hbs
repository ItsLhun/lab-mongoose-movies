<h2>Edit Celebrity</h2>
<form action='/movies/{{this._id}}' method='POST'>
  <label for='name-input'>Name</label>
  <input id='name-input' type='text' name='name' value={{this.name}} />
  <label for='occupation-input'>Occupation</label>
  <input
    id='occupation-input'
    type='text'
    name='occupation'
    value={{this.occupation}}
  />
  <label for='catchphrase-input'>Catchphrase</label>
  <input
    id='catchphrase-input'
    type='text'
    name='catchPhrase'
    value={{this.catchPhrase}}
  />
  <button>save</button>
</form>